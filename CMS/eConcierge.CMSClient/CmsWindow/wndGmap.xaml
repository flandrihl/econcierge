<Window x:Class="eConcierge.CMSClient.CmsWindow.wndGmap"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:src="clr-namespace:eConcierge.CMSClient.Common" 
        Title="Get coordinate" Height="700" Width="700" WindowStartupLocation="CenterOwner"
        WindowStyle="SingleBorderWindow" ResizeMode="NoResize">
    <DockPanel >
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" DockPanel.Dock="Top">
            <TextBlock Text="Latitude: "/>
            <TextBlock x:Name="txbLatitude" Text="24.44"/>
            <TextBlock Text=" Longitude: "/>
            <TextBlock x:Name="txbLongitude" Text="24.44"/>
        </StackPanel>
        <Button x:Name="btnOk" Content="Ok" HorizontalAlignment="Right" Width="60" DockPanel.Dock="Bottom" Click="btnOk_Click" />
        <src:Map x:Name="MainMap" MapType="GoogleMap" Zoom="2" MaxZoom="17" MinZoom="1"  />
    </DockPanel>
</Window>
