<UserControl x:Class="eConcierge.CMSClient.CmsUserControl.LatitudeLongitude"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" >
    <StackPanel Orientation="Horizontal" Margin="0" VerticalAlignment="Top">
        <StackPanel Orientation="Vertical" x:Name="stkCoordinates">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Latitude" Width="60"/>
                <TextBox x:Name="txtLatitude" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Longitude" Width="60"/>
                <TextBox x:Name="txtLongitude" Width="200"/>
            </StackPanel>           
        </StackPanel>
        <Button  Width="90" Margin="10,0,0,0" Height="50" VerticalAlignment="Top" Click="Button_Click">
            <TextBlock TextAlignment="Center" Margin="0"> Fetch <LineBreak/> Coordinate</TextBlock>
        </Button>
    </StackPanel>
</UserControl>
