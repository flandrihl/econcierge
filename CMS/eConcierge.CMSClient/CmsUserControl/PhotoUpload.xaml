<UserControl x:Class="eConcierge.CMSClient.CmsUserControl.PhotoUpload"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008">
    <StackPanel Orientation="Horizontal">
        <TextBox x:Name="txtPhotoPath" Width="268" />
        <Button Content="..." x:Name="btnBrowse" Height="{Binding ElementName=txtPhotoPath, Path=Height}" Width="20" Click="btnBrowse_Click" />
        <Button Content="See" x:Name="btnSee" Height="{Binding ElementName=txtPhotoPath, Path=Height}" Width="30" Margin="5,0,0,0" Click="btnSee_Click" />
    </StackPanel>
</UserControl>
