<Window x:Class="eConcierge.Shell.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Content Management System" WindowState="Maximized" Background="Blue">
  <Window.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="MainResourceDictionary.xaml" />
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Window.Resources>

  <Grid>
    <DockPanel>
      <ContentControl DockPanel.Dock="Left" Content="{Binding ShellPresenter.View}" />
    </DockPanel>
  </Grid>
</Window>
