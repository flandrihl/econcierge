<UserControl x:Class="eConcierge.CMSClient.CmsUserControl.DiningMenuPhotoItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" x:Name="parent" mc:Ignorable="d" d:DesignWidth="390">
    <DockPanel LastChildFill="True" Margin="0" Height="23">
        <Button DockPanel.Dock="Right" Content="x" x:Name="btnRemove" Height="{Binding ElementName=txtPhotoPath, Path=Height}" Width="37" Click="btnRemove_Click" FontSize="16" />
        <TextBlock DockPanel.Dock="Right" x:Name="txtPhotoPath" Background="{DynamicResource NormalBrush}" Margin="0" />
    </DockPanel>
</UserControl>
