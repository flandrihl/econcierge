<UserControl x:Class="eConcierge.CMSClient.CmsUserControl.DiningMenuPhotoItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008">
    <StackPanel Orientation="Horizontal" Margin="0" >
        <TextBlock x:Name="txtPhotoPath" Width="218" Background="{DynamicResource NormalBrush}" Margin="0" />
        <Button Content="x" x:Name="btnRemove" Height="{Binding ElementName=txtPhotoPath, Path=Height}" Width="20" Click="btnRemove_Click" />
    </StackPanel>
</UserControl>
